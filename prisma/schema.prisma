// This is the main Prisma schema file.
// It is responsible for defining the datasource and generator.
// All models are defined in separate files in the ./schema directory and included here.

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

