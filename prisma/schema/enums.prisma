/// Defines the roles a user can have within the system.
enum UserRole {
  ADMIN
  CASHIER
  PHONE_REPAIR
}

/// Defines the subscription status of a user.
enum SubscriptionStatus {
  TRIAL
  ACTIVE
  INACTIVE
  CANCELED
}

/// Defines the unit of measure for a product.
enum ProductUnit {
  EACH // Each item
  KG   // Kilogram
  G    // Gram
  L    // Liter
  ML   // Milliliter
}

/// Defines the payment methods for a sale.
enum PaymentType {
  CASH
  CARD
  CREDIT
}

/// Defines the status of a purchase order.
enum PurchaseOrderStatus {
  PENDING
  PARTIALLY_RECEIVED
  COMPLETED
  CANCELLED
}

/// Defines the status of a supplier.
enum SupplierStatus {
  ACTIVE
  INACTIVE
}

/// Defines the status of a repair job.
enum RepairJobStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  COLLECTED
}
